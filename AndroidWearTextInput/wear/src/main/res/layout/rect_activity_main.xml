<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.baschdi.androidweartextinput.MainActivity"
    tools:deviceIds="wear_square">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <!-- other views go here -->

    <android.support.wearable.view.DismissOverlayView
        android:id="@+id/dismiss_overlay"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    </FrameLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rootView"
        android:background="@drawable/layoutneu">
        <Button
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:text="A  B  C  D"
            android:textAllCaps="false"
            android:id="@+id/button1"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:textColor="@color/black"
            android:layout_gravity="top|left"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="0dp" />
        <Button
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:text="E  F  G  H"
            android:textAllCaps="false"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:textColor="@color/black"
            android:layout_gravity="top|left"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="0dp" />
        <Button
            android:layout_width="28dp"
            android:layout_height="70dp"
            android:text="I   J   K   L"
            android:textAllCaps="false"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:textColor="@color/black"
            android:layout_gravity="top|left"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="160dp"
            android:paddingLeft="4dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp" />
        <Button
            android:layout_width="28dp"
            android:layout_height="70dp"
            android:text="M   N   O   P"
            android:textAllCaps="false"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:textColor="@color/black"
            android:layout_gravity="top|left"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="160dp"
            android:paddingLeft="4dp"
            android:paddingRight="6dp" />
        <Button
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:text="T  S  R  Q"
            android:textAllCaps="false"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:textColor="@color/black"
            android:layout_gravity="top|left"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="160dp"
            android:paddingBottom="7dp" />
        <Button
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:text="X  W  V  U"
            android:textAllCaps="false"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:textColor="@color/black"
            android:layout_gravity="top|left"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="160dp"
            android:paddingBottom="7dp" />
        <Button
            android:layout_width="28dp"
            android:layout_height="70dp"
            android:text=",    .   Z   Y"
            android:textAllCaps="false"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:textColor="@color/black"
            android:layout_gravity="top|left"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="0dp"
            android:paddingLeft="6dp"
            android:paddingRight="4dp" />
        <Button
            android:layout_width="28dp"
            android:layout_height="70dp"
            android:text="â‚¬   @   ?   !"
            android:textAllCaps="false"
            android:id="@+id/button8"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:textColor="@color/black"
            android:layout_gravity="top|left"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="0dp"
            android:paddingLeft="6dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp" />


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/kreuz"
            android:gravity="top|left"
            android:id="@+id/middlePressed"
            android:textColor="@color/black"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_margin="30dp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="A"
                android:id="@+id/textViewTop"
                android:textColor="#000000"
                android:textSize="40dp"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="A"
                android:id="@+id/textViewRight"
                android:textColor="#000000"
                android:textSize="40dp"
                android:layout_marginLeft="90dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="A"
                android:id="@+id/textViewBottom"
                android:textColor="#000000"
                android:textSize="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="A"
                android:id="@+id/textViewLeft"
                android:textColor="#000000"
                android:textSize="40dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/middleReleased"
            android:textColor="@color/black"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:visibility="visible"
            android:layout_margin="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textViewField"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
